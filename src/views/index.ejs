<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="assets/styles/style.css">
  <title>Todos os Links</title>
</head>

<body>
  <main>
    <header class="header">
      <h1>Meus links</h1>
      <img src="assets/icons/add.png" alt="ícone de adicionar link">
    </header>

    <%allLinks.forEach(link=> {%>
      <div class="card-link" id='<%=link._id%>'>
        <div>
          <h2><%=link.title%></h2>
          <p><span>Descrição: </span><%=link.description%></p>
          <p><span>URL: </span><%=link.url%></p>
        </div>
        <div>
          <button class="button delete_link">Deletar</button>
        </div>
      </div>
    <%})%>

    <section class="container-modal-add">
      <div class="card-modal-add">
        <div class="content-top-modal">
          <h3>Adicionar link</h3>
          <img 
            class="img-close" 
            src="assets/icons/close.png" 
            alt="Ícone para deletar link"
          >
        </div>

        <form class="form-new-link" action="/" method="POST">
          <input type="text" name="title" placeholder="Título" required>
          <input type="text" name="description" placeholder="Descrição">
          <input type="url" name="url" placeholder="URL" required>
          <button class="button button-modal">Salvar</button>
        </form>
      </div>
    </section>
  </main>

